<mujoco model="two_spheres">
    <worldbody>
        <!-- Ground plane -->
        <!-- <geom name="ground" type="plane" pos="0 0 0" size="5 5 0.1" rgba="0.8 0.8 0.8 1"/> -->
        <!-- First sphere: independent body -->
        <body name="robot" pos="0 0 0.5">
            <freejoint/>
            <geom name="robot_geom" type="box" size="0.2 0.2 0.2" rgba="1 0 0 1"/>
        </body>
        <!-- Second sphere: independent body -->
        <body name="target" pos="1 0 0.5">
            <freejoint/>
            <geom name="target_geom" type="sphere" size="0.2" rgba="0 0 1 1"/>
        </body>
    </worldbody>
    <!-- <option timestep="0.01" gravity="0 0 -9.8"/> -->
    <option timestep="0.01" gravity="0 0 0"/>
    <default/>
</mujoco>
